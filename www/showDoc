case $1 in

cuon5)
cd ~/Projekte/cuon/Presse/Pro-Linux/cuon5

docbook2html  cuon5.docbook && docbook2pdf cuon5.docbook
evince cuon5.pdf

;;

en)


cd en_Cuon


docbook2html en_cuon.docbook && docbook2pdf en_cuon.docbook
evince en_cuon.pdf
cd ..
;;

*)

cd Cuon

cp cuon.docbook de_cuon.docbook
recode -d utf-8..h4 de_cuon.docbook
docbook2html de_cuon.docbook && docbook2pdf de_cuon.docbook
evince de_cuon.pdf
cd ..
;;

esac 
